{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "ignoreExportsUsedInFile": true,
  "ignoreDependencies": [
    "@types/node",
    "@types/react",
    "@types/react-dom",
    "typescript",
    "prisma",
    "eslint-config-next",
    "prettier",
    "shadcn",
    "tailwindcss"
  ],
  "ignore": [
    "**/*.test.ts",
    "**/*.test.tsx",
    ".next/**",
    "node_modules/**",
    "**/dashboard/drivers/new/page.tsx",
    "**/dashboard/vehicles/new/page.tsx",
    "**/dashboard/expense-types/new/page.tsx",
    "**/dashboard/payment-methods/new/page.tsx",
    "**/dashboard/platforms/new/page.tsx"
  ],
  "ignoreBinaries": ["pnpm"],
  "next": {
    "entry": [
      "src/app/**/page.tsx!",
      "src/app/**/layout.tsx!",
      "src/app/**/route.ts!",
      "src/app/**/loading.tsx!",
      "src/app/**/error.tsx!",
      "src/app/**/not-found.tsx!",
      "src/middleware.ts!",
      "next.config.ts!",
      "postcss.config.mjs!"
    ]
  }
}
