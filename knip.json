{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "ignoreExportsUsedInFile": true,
  "ignoreDependencies": [
    "eslint-config-next",
    "prettier",
    "shadcn"
  ],
  "ignore": [
    "**/*.test.ts",
    "**/*.test.tsx",
    ".next/**",
    "node_modules/**",
    "**/dashboard/drivers/new/page.tsx",
    "**/dashboard/vehicles/new/page.tsx",
    "**/dashboard/expense-types/new/page.tsx",
    "**/dashboard/payment-methods/new/page.tsx",
    "**/dashboard/platforms/new/page.tsx",
    "src/app/sw.ts",
    "src/components/ui/breadcrumb.tsx",
    "src/components/ui/textarea.tsx",
    "src/components/shared/nav-components/**",
    "src/components/shared/dynamic-breadcrumb.tsx",
    "src/app/**/billing/_components/**",
    "src/app/**/_components/metrics-section.tsx",
    "src/components/ads/**",
    "prisma/seed-partners.ts"
  ],
  "next": {
    "entry": [
      "src/app/**/page.tsx!",
      "src/app/**/layout.tsx!",
      "src/app/**/route.ts!",
      "src/app/**/loading.tsx!",
      "src/app/**/error.tsx!",
      "src/app/**/not-found.tsx!",
      "src/middleware.ts!",
      "next.config.ts!",
      "postcss.config.mjs!",
      "src/app/sw.ts!"
    ]
  }
}
